:root
    --background #f4f4f4
    --background-rgb 244, 244, 244
    --background-light #fff
    --background-contrast #272727
    --background-error #fe3536
    --shadow #d3d3d3
    --text #2e2e2e
    --text-secondary #5a5a5a
    --text-contrast #f8f8f8

    --tonic #3c8ee4
    --tonic-hover #3b74c9
    --error #fe3536
    --valid var(--tonic)
    --disabled #b7b7b7

    --border 2px solid #d3d3d3
    --space 8px
    --default-radius 5px
    --wrapper calc(100% - 40px)
    --text-size 16px
    --title-size 38px
    --sub-title-size 24px
    --default-font 'Work Sans', monospace;
    --title-font 'Arvo', monospace;

body.dark-mode
    --background #1f1d26
    --background-rgb 31, 29, 38
    --background-light #272530
    --background-contrast #f0f0f0
    --shadow #17151e
    --text #e1e1e1
    --text-secondary #c1c1c1
    --text-contrast #0f0f0f
    --disabled #43404f

body.prac-mode
    --background #071831
    --background-rgb 7, 24, 49
    --background-light #0b254a
    --background-contrast #718bb0
    --shadow #030c18
    --text #e7ebf1
    --text-secondary #a0b1ca
    --text-contrast #030c18
    --tonic #ea00d9
    --tonic-hover #bb00ad
    --error #fe3536
    --valid var(--tonic)
    --disabled #58657a

// media queries sp√©cifique pour le wrapper
@media only screen and (min-width: 1240px)
    :root
        --wrapper 1200px

$breakpoints = sm, md, lg, xl

sm = {
    min: 350px,
    max: 540px
}

md = {
    min: 541px,
    max: 1024px
}

lg = {
    min: 1025px,
    max: 1280px
}

xl = {
    min: 1281px,
    max: false
}
